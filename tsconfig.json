{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ESNext",  // Cambiado a "ESNext" para mejor compatibilidad con Node 20
    "useDefineForClassFields": false,
    "forceConsistentCasingInFileNames": true, // Añadido para garantizar consistencia en los nombres de archivos
    "lib": [
      "ES2022",
      "dom"
    ],
    "types": ["node", "jasmine"] // Añadido para incluir los tipos de Node.js en el proyecto
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
